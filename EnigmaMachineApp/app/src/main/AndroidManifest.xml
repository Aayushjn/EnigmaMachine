<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aayush.enigmamachine">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EnigmaHome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EncryptActivity"
            android:label="@string/encrypt_activity"
            android:parentActivityName=".EnigmaHome">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aayush.enigmamachine.EnigmaHome" />
        </activity>
        <activity
            android:name=".EncryptionActivity"
            android:label="@string/encryption_activity"
            android:parentActivityName=".EncryptActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aayush.enigmamachine.EncryptActivity" />
        </activity>
    </application>

</manifest>